    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.9",
    "chai": "^4.2.0",
    "graphql": "^14.0.2",
    "graphql-middleware": "^2.0.2",
    "graphql-tools": "^4.0.3",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "graphql-shield": "^4.1.0",
    "lodash": "^4.17.11"
